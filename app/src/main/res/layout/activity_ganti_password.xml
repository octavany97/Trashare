<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingRight="40dp"
    android:paddingLeft="40dp"
    android:gravity="center_vertical"
    android:background="@color/colorMenu"
    tools:context=".GantiPasswordActivity">

    <ImageView
        android:src="@drawable/logoputih"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_gravity="center"/>
    <TextView
        android:text="Ganti Password"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:fontFamily="serif-monospace"
        android:textColor="@color/colorWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:text="PASSWORD LAMA"
        android:layout_marginTop="10dp"
        android:fontFamily="serif-monospace"
        android:textColor="@color/colorWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/pass_lama"
        android:background="@drawable/et_bg"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif-dark"/>


    <TextView
        android:text="PASSWORD BARU"
        android:layout_marginTop="20dp"
        android:fontFamily="serif-monospace"
        android:textColor="@color/colorWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/pass_baru"
        android:background="@drawable/et_bg"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif-dark"/>


    <TextView
        android:text="RE-PASSWORD BARU"
        android:layout_marginTop="20dp"
        android:fontFamily="serif-monospace"
        android:textColor="@color/colorWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/re_pass_baru"
        android:background="@drawable/et_bg"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif-dark"/>



    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="100dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_bg"
            android:fontFamily="serif-monospace"
            android:layout_height="40dp"
            android:textColor="@color/colorWhite"
            android:text="Ganti" />

        <Button
            android:layout_width="100dp"
            android:background="@drawable/btn_bg"
            android:fontFamily="serif-monospace"
            android:layout_height="40dp"
            android:textColor="@color/colorWhite"
            android:text="kembali" />
    </LinearLayout>

</LinearLayout>